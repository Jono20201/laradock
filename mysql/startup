DROP USER IF EXISTS 'MYSQL_USER'; 
CREATE USER 'MYSQL_USER'@'%'; 

CREATE DATABASE IF NOT EXISTS MYSQL_DATABASE;
CREATE DATABASE IF NOT EXISTS athena;
CREATE DATABASE IF NOT EXISTS athena_testing;
CREATE DATABASE IF NOT EXISTS pickr;

GRANT ALL ON MYSQL_DATABASE.* TO 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD';
GRANT ALL ON athena.* TO 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD';
GRANT ALL ON athena_testing.* TO 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD';
GRANT ALL ON pickr.* TO 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD';